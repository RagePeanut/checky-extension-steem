{
    "manifest_version": 2,
    "name": "Checky",
    "version": "0.2.5",
    "description": "Checks the mentions before posting on a multitude of apps that post to the Steem blockchain.",
    "content_scripts": [
        {
            "matches": [
                "*://steemit.com/*",
                "*://busy.org/*",
                "*://steempeak.com/*"
            ],
            "js": [
                "lib/steem.min.js",
                "utils/checker.js",
                "utils/attr.js",
                "utils/html.js",
                "utils/specs.js",
                "utils/editor.js",
                "utils/settings.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "https://api.steemit.com/",
        "storage",
        "tabs"
    ]
}