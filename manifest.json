{
    "manifest_version": 2,
    "author": "RagePeanut",
    "name": "Checky - Steem Mention Checker",
    "short_name": "Checky",
    "version": "0.3.0.0",
    "description": "Checks that the mentions in your post are correct before you post it on the Steem blockchain.",
    "icons": {
        "16": "img/icon/16x16.png",
        "32": "img/icon/32x32.png",
        "48": "img/icon/48x48.png",
        "128": "img/icon/128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://steemit.com/*",
                "*://busy.org/*",
                "*://staging.busy.org/*",
                "*://steempeak.com/*"
            ],
            "js": [
                "lib/steem.min.js",
                "utils/checker.js",
                "utils/attr.js",
                "utils/html.js",
                "utils/specs.js",
                "utils/menu.js",
                "utils/editor.js",
                "utils/settings.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "https://api.steemit.com/",
        "storage",
        "tabs"
    ]
}